@import './var.styl'

/* Component Header */
#wrapper-header
  background solid8
  color noWhite
  padding space1 0 space1 0
  display flex
  justify-content center
  animation aparecer 1s ease-in
  header
    width 90%
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap
    gap space1

@keyframes aparecer
  0%
    opacity 0
  100%
    opacity 1

/* hgroup H1 y H2 */
#hgroup
  order 2
  flex-grow 2
  display flex
  align-items center
  gap space1
  hyphens none
  h1
    font-size clamp(22px, 1.2vw, 1.4vw)
    text-transform uppercase

/* Main logo */
#main-logo
  order 1
  display flex
  img
    width 3vw
    min-width 48px
    height auto

/* Main menu */
#main-menu
  order 3
  a
    font-weight 700
    padding space1
    outline solid border1 noWhite
    border-radius border1
    &:hover
      color solid8
      background noWhite

@media screen and (max-width:620px)
  #wrapper-header
    header
      flex-direction column

  #hgroup
    flex-grow 1
    flex-direction column