/* Variables */
solid2 = rgba(0,0,0,0.2)
solid4 = rgba(0,0,0,0.4)
solid6 = rgba(0,0,0,0.6)
solid8 = rgba(0,0,0,0.8)
noWhite = #F2F2F2

:root
  font-size 16px

body
  color solid8
  width 100%
  font-size clamp(1em, 1vw, 1.2vw)
  line-height 120%
  font-family "Atkinson Hyperlegible" ,sans-serif
  font-weight 400
  background noWhite

/* Conponent Header */
#wrapper-header
  background solid8
  color noWhite
  padding clamp(2rem, 2vh, 2.2vh) 0 clamp(2rem, 2vh, 2.2vh) 0
  display flex
  justify-content center
  animation aparecer 1s ease-in
  header
    width 90%
    max-width 1920px
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap

/* hgroup H1 y H2 */
#hgroup
  order 2
  display flex
  align-items center
  gap clamp(1rem, 1vw, 1vw)
  hyphens none
  h1
    font-size clamp(1.4em, 1.2vw, 1.4vw)
    line-height 100%
    text-transform uppercase
    font-family 'Viga', sans-serif
  h2
    line-height 100%

/* Main logo */
#main-logo
  order 1
  display flex
  img
    width 3vw
    min-width 48px
    height auto

/* Main menu */
#main-menu
  order 3
  menu
    display flex
    flex-wrap wrap
    gap clamp(1rem, 1vw, 1vw)
  li
    display flex
  a
    font-weight 700
    padding clamp(1rem, 0.4vw, 0.6vw)
    outline solid clamp(3px, 0.1vw, 0.2vw) noWhite
    border-radius clamp(3px, 0.2vw, 0.2vw)
    transition all 0.2s ease-in-out
    &:hover
      color solid8
      background noWhite

#input-menu,.open-menu,.closed-menu
  display none

/* Animation menu*/
@keyframes aparecer
  0%
    opacity 0
  100%
    opacity 1

/*Content*/
#content
  margin 0 auto
  width 90%
  max-width 1920px
  padding 3vw 0 3vw 0
  display flex
  justify-content space-between
  gap 2vw
  #main-content
    width 45%
    padding 2vw 0 2vw 0
      padding-bottom 1vh
    strong
      font-weight 700
  .banner
    position relative
    z-index 1
    width 45%
    height auto
    text-align center
    padding 2vw
    display flex
    justify-content center
    align-items center
    &:before
      position absolute
      left 0
      top 0
      z-index -1
      content ""
      background-color solid4
      background-image repeating-linear-gradient(45deg,transparent,transparent 35px,solid2 35px,solid2 70px)
      transform skewY(-3deg)
      width 100%
      height 100%
      border-radius 1vw
    p
      font-size 1.4vw
      line-height 140%
      color noWhite
      font-family 'Viga', sans-serif
    strong
      font-size 1.6vw
    img
      display inline
      width 2vw

/* Banner Animation */
.floating
  animation-name floating
  animation-duration 1.5s
  animation-iteration-count infinite

@keyframes floating
  0%
    transform translateY(0%)
  50%
    transform translateY(3%)
  100%
    transform translateY(0%)

/* Component AsideFooter */
#main-aside
  width 100%
  padding clamp(3rem, 4vw, 4.2vw) 0 clamp(3rem, 4vw, 4.2vw) 0
  background solid4
  display flex
  flex-direction column
  justify-content center
  align-items center
  gap clamp(2rem, 2.8vw, 3vw)

#logofooter
  height auto
  max-width 6%
  min-width 48px

#uso
  width 90%
  max-width 1920px
  display flex
  flex-wrap wrap
  justify-content space-between
  gap clamp(1rem, 1vw, 1.2vw) clamp(2rem, 2vw, 2.2vw)
  h3, h4
    border-bottom solid clamp(2px, 0.1vw, 0.2vw) solid4
    width 100%
    font-family 'Viga', sans-serif
    font-size clamp(1.4em, 1.4vw, 1.6vw)
    text-align center
    padding-bottom clamp(1rem, 0.6vw, 0.8vw)
    margin-bottom clamp(1rem, 1vw, 1.2vw)
    color solid6
  div, nav
    width 30%
  p
    padding-bottom clamp(1rem, 1vw, 1.2vw)
    hyphens none
  a
    color noWhite
    transition all 0.2s ease-in-out
    &:hover
      color solid8
  ul
    display flex
    gap clamp(1rem, 1vw, 1.2vw)
    a
      outline solid clamp(3px, 0.1vw, 0.2vw) noWhite
      padding clamp(1rem, 0.4vw, 0.6vw)
      border-radius clamp(3px, 0.2vw, 0.2vw)
      &:hover
        background noWhite
        color solid8

footer
  padding clamp(2rem, 2vw, 2.2vw)
  p
    text-align center