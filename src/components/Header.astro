---
/* importando assets */
import { Image } from "astro:assets";
import logo from "../assets/logofg.svg";

const { title } = Astro.props;
---

<div id="wrapper-header">
  <header>
    <div id="hgroup">
      <h1>{title}</h1>
      <h2>Descarga simple y r√°pida</h2>
    </div>

    <a id="main-logo" href="/" title="Fotos Gratis"
      ><Image src={logo} alt="Logotipo Fotos Gratis" />
    </a>

    <input type="checkbox" id="input-menu" />
    <nav id="main-menu">
      <label for="input-menu" class="open-menu"
        ><span class="material-symbols-rounded">menu</span></label
      >
      <label for="input-menu" class="closed-menu"
        ><span class="material-symbols-rounded">close</span></label
      >
      <menu>
        <li>
          <a href="/" title="Inicio"
            >Inicio <span class="material-symbols-rounded"> home</span></a
          >
        </li>
        <li>
          <a href="/fotos/" title="Fotos"
            >Fotos <span class="material-symbols-rounded">photo_camera</span></a
          >
        </li>
      </menu>
    </nav>
  </header>
</div>
